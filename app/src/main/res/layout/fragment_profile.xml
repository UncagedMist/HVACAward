<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#d4e7e1"
    tools:context=".Fragment.ProfileFragment">

    <ScrollView
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--profile image and name-->

            <RelativeLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_centerHorizontal="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:background="@android:color/white"
                    android:id="@+id/txt_name"
                    android:textSize="18sp"
                    android:text="FULL NAME"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:layout_marginTop="4dp"
                    android:layout_below="@id/img_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <TextView
                    android:background="@android:color/white"
                    android:id="@+id/txt_refer"
                    android:textSize="18sp"
                    android:text="Refer Code"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:layout_marginTop="4dp"
                    android:layout_below="@id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <!--work experience in-->

            <RelativeLayout
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="EXPERIENCE IN"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:padding="4dp"
                    android:text="REQUIRED"
                    android:background="@drawable/text_round_gray"
                    android:layout_alignParentRight="true"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="4dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/ckb_window"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Windows" />

                <CheckBox
                    android:id="@+id/ckb_split"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Split"
                    android:layout_below="@id/ckb_window"/>

                <CheckBox
                    android:id="@+id/ckb_duet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Duetable"
                    android:layout_below="@id/ckb_split"/>

                <CheckBox
                    android:id="@+id/ckb_chiller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Chiller"
                    android:layout_below="@id/ckb_duet"/>

                <CheckBox
                    android:id="@+id/ckb_vrv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="VRV"
                    android:layout_below="@id/ckb_chiller"/>


            </RelativeLayout>

            <!--experience in-->

            <RelativeLayout
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="EXPERIENCE IN"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:padding="4dp"
                    android:text="REQUIRED"
                    android:background="@drawable/text_round_gray"
                    android:layout_alignParentRight="true"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="4dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/ckb_install"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Installation" />

                <CheckBox
                    android:id="@+id/ckb_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Service"
                    android:layout_below="@id/ckb_install"/>

            </RelativeLayout>

            <!--work experience-->

            <RelativeLayout
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="WORK EXPERIENCE"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:padding="4dp"
                    android:text="REQUIRED"
                    android:background="@drawable/text_round_gray"
                    android:layout_alignParentRight="true"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="4dp"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/txt_count"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    app:initialNumber="0"
                    app:finalNumber="100"
                    app:textSize="6sp"
                    app:textColor="@android:color/black"
                    android:layout_margin="4dp"
                    app:backGroundColor="#d4e7e1"/>

                <TextView
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:text="Years"
                    android:layout_marginLeft="8dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@id/txt_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <!--bank details-->

            <RelativeLayout
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="BANK DETAILS"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:padding="4dp"
                    android:text="REQUIRED"
                    android:background="@drawable/text_round_gray"
                    android:layout_alignParentRight="true"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_holder"
                    android:background="@android:color/white"
                    android:hint="Account Holder Name"
                    android:inputType="textPersonName"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edt_account"
                    android:background="@android:color/white"
                    android:hint="Account Number"
                    android:inputType="number"
                    android:layout_marginTop="8dp"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edt_holder"/>

                <EditText
                    android:id="@+id/edt_ifsc"
                    android:background="@android:color/white"
                    android:hint="IFSC Code"
                    android:inputType="text"
                    android:layout_marginTop="8dp"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edt_account"/>

                <EditText
                    android:id="@+id/edt_bank_name"
                    android:background="@android:color/white"
                    android:hint="Bank Name"
                    android:inputType="text"
                    android:layout_marginTop="8dp"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edt_ifsc"/>

                <EditText
                    android:id="@+id/edt_bank_branch"
                    android:background="@android:color/white"
                    android:hint="Bank Branch"
                    android:inputType="text"
                    android:layout_marginTop="8dp"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edt_bank_name"/>

            </RelativeLayout>

            <Button
                android:id="@+id/btn_update_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Profile"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_margin="16dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>